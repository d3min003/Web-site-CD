generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id            Int         @id @default(autoincrement())
  nombre        String
  telefono      String?
  email         String?
  fechaAlta     DateTime    @default(now())
  notas         String?
  interacciones String?
  tipoCliente   String?    // Comprador / Vendedor / Arrendador / Arrendatario
  presupuesto   Float?
  zonaInteres   String?
  requerimientos String?
  estatusCliente String?  // Prospecto / En negociaci√≥n / Cerrado / Perdido
  propiedades   Propiedad[]
}

model Asesor {
  id         Int         @id @default(autoincrement())
  nombre     String
  telefono   String?
  email      String?
  zona       String?
  experiencia Int?
  estatus     String?  // Activo / Inactivo
  propiedades Propiedad[]
}

model Propiedad {
  id        Int       @id @default(autoincrement())
  direccion String
  tipo      String
  operacion String   // Venta / Renta
  precio    Float
  estado    String
  ciudad    String
  superficieConstruida Float?
  superficieTerreno Float?
  recamaras Int?
  banos     Int?
  estacionamientos Int?
  amenidades Json?
  estatus   String
  cliente   Cliente?  @relation(fields: [clienteId], references: [id])
  clienteId Int?
  asesor    Asesor?   @relation(fields: [asesorId], references: [id])
  asesorId  Int?
  createdAt DateTime  @default(now())
}
